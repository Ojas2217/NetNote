<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- File extensions -->
    <property name="fileExtensions" value="java"/>

    <!-- Exclude Test classes -->
    <module name="BeforeExecutionExclusionFileFilter">
        <property name="fileNamePattern" value=".*TestClass\.java$"/>
    </module>

    <!-- TreeWalker module for various rules -->
    <module name="TreeWalker">

        <!-- Indentation: Enforce consistent indentation -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="tabWidth" value="4"/>
            <property name="severity" value="error"/>
        </module>

        <!-- Empty Block: Flag empty code blocks -->
        <module name="EmptyBlock">
            <property name="severity" value="error"/>
        </module>

        <!-- Magic Number: Flag hardcoded constants -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="0,1,-1"/>
        </module>

        <!-- Cyclomatic Complexity: Enforce complexity limit -->
        <module name="CyclomaticComplexity">
            <property name="severity" value="warning"/>
            <property name="max" value="10"/>
        </module>

        <!-- Parameter count: Limit method parameters -->
        <module name="ParameterNumber">
            <property name="severity" value="warning"/>
            <property name="max" value="5"/>
        </module>

        <!-- Whitespace rules: Enforce consistent spacing -->
        <module name="WhitespaceAround">
            <property name="severity" value="error"/>
        </module>

        <module name="EmptyLineSeparator">
            <property name="severity" value="error"/>
        </module>

        <!-- Unused imports: Disallow useless imports -->
        <module name="UnusedImports">
            <property name="severity" value="error"/>
        </module>

        <!-- Import order: Enforce consistent import ordering -->
        <module name="ImportOrder">
            <property name="sortStaticImportsAlphabetically" value="true"/>
            <property name="option" value="top"/> <!-- or "bottom" based on your preference -->
            <property name="separatedStaticGroups" value="true"/>
            <property name="staticGroups" value="java,javax,org,com"/>
        </module>

        <!-- TODO comments: Flag unresolved TODO comments -->
        <module name="TodoComment"/>

        <!-- Naming conventions (camelCase) for methods, variables, and classes -->
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <property name="severity" value="warning"/>
        </module>
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <property name="severity" value="warning"/>
        </module>
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <property name="severity" value="warning"/>
        </module>
        <module name="StaticVariableName">
            <property name="severity" value="warning"/>
        </module>
        <module name="LambdaParameterName">
            <property name="severity" value="warning"/>
        </module>
        <module name="TypeName">
            <property name="severity" value="warning"/>
        </module>
        <module name="ClassTypeParameterName">
            <property name="format" value="(^[A-Z][0-9]?)$|([A-Z][a-zA-Z0-9]*$)"/>
            <message key="name.invalidPattern"
                     value="Class type name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <module name="MissingJavadocMethod">
            <!-- Ignore Javadoc for trivial methods (getter/setter with a small body) -->
            <property name="minLineCount" value="2"/> <!-- Adjust the number of lines as needed -->

            <!-- Allow missing Javadoc on getter and setter methods -->
            <property name="allowMissingPropertyJavadoc" value="true"/>

            <!-- Optional: You can also ignore methods matching certain names with regex -->
            <!-- <property name="ignoreMethodNamesRegex" value="^get.*|^set.*"/> -->

            <!-- Optional: Specify annotations like @Override to skip Javadoc check -->
            <property name="allowedAnnotations" value="Override,Deprecated"/>
        </module>

        <!-- Require Javadoc for classes -->
        <module name="ClassJavadoc"/>

    </module>

    <!-- Line Length should not be inside TreeWalker -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="severity" value="warning"/>
    </module>

    <!-- Optional rule to require newline at the end of files -->
    <module name="NewlineAtEndOfFile">
        <property name="severity" value="error"/>
    </module>
</module>
